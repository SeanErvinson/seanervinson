---
import '../styles/styles.css';
import Footer from '../components/Footer.astro';
import NavigationBar from '../components/NavigationBar.astro';
import { ViewTransitions } from 'astro:transitions';

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Come say hi. Don't worry I don't bite, I just send memes."
    />
    <title>{title}</title>
    <ViewTransitions />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.seanerivnson.com/" />
    <meta property="og:title" content="Welcome | Sean Ervinson" />
    <meta
      property="og:description"
      content="Showcasing my skills, projects, and experience in front-end web development."
    />
    <meta
      property="og:image"
      content="https://www.seanerivnson.com/images/portfolio-preview.jpg"
    />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.seanerivnson.com/" />
    <meta property="twitter:title" content="Welcome | Sean Ervinson" />
    <meta
      property="twitter:description"
      content="Showcasing my skills, projects, and experience in front-end web development."
    />
    <meta
      property="twitter:image"
      content="https://www.seanerivnson.com/images/portfolio-preview.jpg"
    />

    <meta name="author" content="Sean Ervinson" />
  </head>

  <div class="flex min-h-screen flex-col">
    <NavigationBar />
    <main class="h-96 flex-1 px-4 w-full">
      <slot />
    </main>
    <Footer />
  </div>
</html>
