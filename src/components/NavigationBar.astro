---
const links = [{ href: '/', label: 'Home' }];

const { pathname } = Astro.url;
const isActive = (href: string) =>
  href === pathname || href === pathname.replace(/\/$/, '');
---

<nav class="flex my-4 place-content-center">
  <ul class="flex gap-2">
    {
      links.map(({ href, label }) => (
        <li class="opacity-80 list-none text-[0.95rem]">
          <a
            href={href}
            class={[
              isActive(href) ? 'active-link' : '',
              'px-4 py-2 no-underline bg-transparent text-grey-400 hover:text-grey-900',
            ].join(' ')}
          >
            {label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
